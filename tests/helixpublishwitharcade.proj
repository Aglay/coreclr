<Project Sdk="Microsoft.DotNet.Helix.Sdk">
  <PropertyGroup>
    <HelixSource>pr/coreclr/master</HelixSource>
    <HelixType>test/stuff</HelixType>
    <HelixBuild>$(BUILD_BUILDNUMBER)</HelixBuild>
    <HelixTargetQueue>Windows.10.Amd64.Open</HelixTargetQueue>
  </PropertyGroup>

  <ItemGroup>
    <HelixCorrelationPayload>
        <FullPath>$(ArchivesRoot)Core_Root</FullPath>
    </HelixCorrelationPayload>
  </ItemGroup>

  <ItemGroup>
    <HelixWorkItem Include="$(TestArchivesRoot)/*">
      <Command>$(HelixPythonPath) $(RunnerScript) --script %HELIX_WORKITEM_PAYLOAD%\runtests.cmd</Command>
      <PayloadDirectory>$(TestArchivesRoot)/*</Payload>
      <Timeout>00:30:00</Timeout>
    </HelixWorkItem>
  </ItemGroup>

  <Target Name="CorrelationId" AfterTargets="Test">
    <Message Importance="High" Text="##vso[task.setvariable variable=HelixJobId;]$(HelixJobId)" />
  </Target>
</Project>
